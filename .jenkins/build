// bin-linux-arm64
// bin-linux-x64
// bin-macos-arm64
// bin-macos-x64
// bin-win-arm64.exe
// bin-win-x64.exe

pipeline {
  agent any
  stages {

    stage('Build binaries') {
      agent {
        label 'remote'
      }
      steps {
        script {
          def node = 'node14'
          def network = 'mainnet'
          sh "docker build -t cli-bins --build-arg NETWORK=$network --build-arg NODE=$node ."
          sh 'docker run --rm -v \"$(pwd)/bin\":/mnt/bin cli-bins'
          sh 'ls -al bin'
        }
      }
    }

    // stage('Upload binaries') {
    //   steps {
    //     script {
    //       //
    //     }
    //   }
    // }
  }
}
